generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id                     // Google OAuth ID (sub)
  name     String?                           // 可选：用于显示
  messages Message[]                         // 一对多：用户发的消息
}

model Message {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  topics    Topic[]   @relation("MessageTopics") // 多对多
}

model Topic {
  id        Int        @id @default(autoincrement())
  title     String     @unique
  color     String
  createdAt DateTime   @default(now())
  messages  Message[]  @relation("MessageTopics")
}
